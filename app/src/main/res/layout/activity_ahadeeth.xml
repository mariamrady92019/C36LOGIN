<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hadeeth.AhadeethActivity"
    android:background="@drawable/default_bg"
    >
    <TextView
        android:id="@+id/eslamy_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="اسلامي"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:textSize="35sp"
       android:fontFamily="@font/dt"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintGuide_begin="70dp"
        android:orientation="horizontal"/>

<ImageView
    android:id="@+id/besm_im"
    android:layout_width="wrap_content"
    android:layout_height="180dp"
    app:layout_constraintTop_toBottomOf="@id/guideline"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:src="@drawable/hadeth_logo"
    />
    <View
        android:id="@+id/dec1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/brown"
        app:layout_constraintTop_toBottomOf="@id/besm_im"
        />
    <TextView
        android:id="@+id/ahad_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="احاديث"
        android:textColor="@color/material_on_background_emphasis_high_type"
        android:textSize="25sp"
        android:fontFamily="@font/dt"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/dec1"
        />
    <View
        android:id="@+id/dec2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/brown"
        app:layout_constraintTop_toBottomOf="@id/ahad_tv"
        />
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/Ahadeeth_rcy"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/dec2"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:listitem="@layout/ahadeeth_item"
      />

</androidx.constraintlayout.widget.ConstraintLayout>